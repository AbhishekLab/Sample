<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/navigation_header"
        android:layout_width="match_parent"
        android:background="@drawable/gradient"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/header_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/common_20_dp"/>

    <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Abhishek"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:ellipsize="end"
            android:maxLines="1"
            android:maxWidth="150dp"
            app:layout_constraintBottom_toBottomOf="@+id/header_icon"
            app:layout_constraintLeft_toRightOf="@+id/header_icon"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toTopOf="@+id/header_icon"/>

</android.support.constraint.ConstraintLayout>
